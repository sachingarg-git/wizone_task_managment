# Wizone IT Support Portal - Production Environment Variables
# Copy this file to .env and update the values

# Database connection (PostgreSQL recommended)
DATABASE_URL=postgresql://username:password@localhost:5432/wizone_portal

# Session security (generate a long random string)
SESSION_SECRET=your-very-long-random-secret-key-here-minimum-32-characters

# Application settings
NODE_ENV=production
PORT=5000

# Domain configuration
ALLOWED_ORIGINS=https://task.wizoneit.com,https://www.wizoneit.com

# Optional: External database credentials (if using SQL Server)
SQL_SERVER_HOST=your-sql-server-host
SQL_SERVER_PORT=1433
SQL_SERVER_DATABASE=your-database-name
SQL_SERVER_USERNAME=your-username
SQL_SERVER_PASSWORD=your-password

# Optional: Email configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@wizoneit.com
SMTP_PASS=your-app-password

# Optional: File upload configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security settings
CORS_ORIGINS=https://task.wizoneit.com,https://wizoneit.com
TRUST_PROXY=true