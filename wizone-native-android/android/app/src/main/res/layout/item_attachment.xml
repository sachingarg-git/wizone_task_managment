<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/ivFileIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_attachment"
        android:layout_marginEnd="12dp"
        android:contentDescription="File icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="image_001.jpg"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFileSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.5 MB"
            android:textSize="12sp"
            android:textColor="@color/on_surface_variant" />

        <TextView
            android:id="@+id/tvUploadedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uploaded by: John Smith"
            android:textSize="12sp"
            android:textColor="@color/on_surface_variant" />

        <TextView
            android:id="@+id/tvUploadedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jan 15, 2024 14:30"
            android:textSize="12sp"
            android:textColor="@color/on_surface_variant" />

    </LinearLayout>

</LinearLayout>